<html lang="en" data-bs-theme-base="stone" data-bs-theme-primary="cyan" data-bs-theme-radius="0.5">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, viewport-fit=cover">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Müzayede Yönetim Paneli</title>
    <link href="/dist/css/tabler.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://rsms.me/inter/inter.css">
    <link href="/dist/css/tabler-themes.min.css" rel="stylesheet">
    <link href="/dist/css/site.css" rel="stylesheet">
</head>
<body style="">
    <div class="page">
        <header class="navbar navbar-expand-md d-print-none">
            <div class="container-xl">
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbar-menu" aria-controls="navbar-menu" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-brand navbar-brand-autodark d-none-navbar-horizontal pe-0 pe-md-3">
                    <a href="/">
                        <img src="/img/icons/logo.svg" />
                    </a>
                </div>
                <div class="navbar-nav flex-row order-md-last">

                    <div class="d-none d-md-flex">

                        <div class="nav-item dropdown d-none d-md-flex">
                            <a href="#" class="nav-link px-0" data-bs-toggle="dropdown" tabindex="-1" aria-label="Show notifications" data-bs-auto-close="outside" aria-expanded="false">
                                <img src="/img/icons/bell.svg" />
                                <span class="badge bg-red"></span>
                            </a>
                            <partial name="PartialViews/Notifications.cshtml"></partial>
                        </div>

                    </div>
                    <partial name="PartialViews/Profile.cshtml"></partial>
                </div>
            </div>
        </header>
        <header class="navbar-expand-md">
            <div class="collapse navbar-collapse" id="navbar-menu">
                <div class="navbar">
                    <div class="container-xl">
                        <div class="row flex-column flex-md-row flex-fill align-items-center">
                            <div class="col">
                                <partial name="PartialViews/Menu.cshtml"></partial>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </header>
        <div class="page-wrapper">
            <div class="page-header d-print-none">
                <div class="container-xl">
                    <div class="row g-2 align-items-center">
                        <div class="col">
                            <div class="page-pretitle">Müzayede Yönetim paneli</div>
                            <h2 class="page-title">@(ViewData["Title"] ?? "Sayfa Başlığı" )</h2>
                        </div>
                    </div>
                </div>
            </div>
            <div class="page-body">
                <div class="container-xl">
                    @RenderBody()
                </div>
            </div>
            <partial name="PartialViews/Footer.cshtml"></partial>
        </div>
    </div>
   
    <script src="/dist/js/tabler.min.js" defer=""></script>
</body>
</html>