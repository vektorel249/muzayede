@model IEnumerable<ProductListViewModel>
@{
    ViewBag.Title = "Satışa Çıkardığım Ürünler";
}
@if (Model is null)
{
    <div class="alert alert-danger" role="alert">
        <div class="alert-icon">
            <svg xmlns="http://www.w3.org/2000/svg"
                 width="24"
                 height="24"
                 viewBox="0 0 24 24"
                 fill="none"
                 stroke="currentColor"
                 stroke-width="2"
                 stroke-linecap="round"
                 stroke-linejoin="round"
                 class="icon alert-icon icon-2">
                <path d="M3 12a9 9 0 1 0 18 0a9 9 0 0 0 -18 0" />
                <path d="M12 8v4" />
                <path d="M12 16h.01" />
            </svg>
        </div>
        @ViewBag.Message
    </div>
}
else
{
    <div class="col-12">
        <div class="card">
            @if (Model.Any())
            {
                <div class="card-header">
                    <a class="btn btn-primary" href="@Url.Action("Create", "Product")">Yeni Ürün Ekle</a>
                </div>
                
                <div class="table-responsive">
                    <table class="table table-vcenter card-table table-striped">
                        <thead>
                            <tr>
                                <th>Ürün Adı</th>
                                <th>Liste Fiyatı</th>
                                <th>Eklenme Tarihi</th>
                                <th class="w-1"></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var product in Model)
                            {
                                <tr>
                                    <td>@product.Name</td>
                                    <td>@product.Price ₺</td>
                                    <td class="text-secondary">@product.CreatedAt.ToString("dd/MM/yyyy HH:mm")</td>
                                    <td>
                                        <a href="@Url.Action("Edit", "Product", new { id = product.Id })">Düzenle</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="alert alert-warning" role="alert">
                    <div class="alert-icon">
                        <svg xmlns="http://www.w3.org/2000/svg"
                             width="24"
                             height="24"
                             viewBox="0 0 24 24"
                             fill="none"
                             stroke="currentColor"
                             stroke-width="2"
                             stroke-linecap="round"
                             stroke-linejoin="round"
                             class="icon alert-icon icon-2">
                            <path d="M12 9v4" />
                            <path d="M10.363 3.591l-8.106 13.534a1.914 1.914 0 0 0 1.636 2.871h16.214a1.914 1.914 0 0 0 1.636 -2.87l-8.106 -13.536a1.914 1.914 0 0 0 -3.274 0z" />
                            <path d="M12 16h.01" />
                        </svg>
                    </div>
                    Henüz müzayedeye çıkardığın bir ürün yok. Hemen <a href="@Url.Action("Create", "Product")">Ekle</a>!
                </div>
            }
        </div>
    </div>
}